---
// WidgetContainer.astro
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="border-2 border-[var(--color-border)] p-6 transition-colors duration-300">
  <h3 class="text-xl font-mono font-bold mb-4 flex items-center">
    <span class="text-[var(--color-accent)] mr-2">#</span> {title}
  </h3>
  <slot />
</div>
