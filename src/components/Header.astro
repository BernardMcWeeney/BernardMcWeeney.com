---
// Header.astro
---

<header class="border-b-2 border-black py-5">
    <div class="container mx-auto px-4">
      <nav class="flex flex-col sm:flex-row justify-between items-center">
        <div class="flex items-center mb-4 sm:mb-0">
          <div class="text-2xl font-mono font-bold mr-2 text-orange-500">&gt;</div>
          <a href="/" class="text-2xl font-mono font-bold hover:text-orange-500 transition-colors duration-300">
            Bernard_McWeeney/<span class="cursor-blink hidden sm:inline-block"></span>
          </a>
        </div>
        
        <ul class="flex flex-wrap justify-center gap-6 items-center text-sm font-mono">
          <li>
            <a href="/" class="py-1 hover:text-orange-500 transition-colors duration-300 relative group">
              home
              <span class="absolute left-0 bottom-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full"></span>
            </a>
          </li>
          <li>
            <a href="/blog" class="py-1 hover:text-orange-500 transition-colors duration-300 relative group">
              blog
              <span class="absolute left-0 bottom-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full"></span>
            </a>
          </li>
          <li>
            <a href="/projects" class="py-1 hover:text-orange-500 transition-colors duration-300 relative group">
              projects
              <span class="absolute left-0 bottom-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full"></span>
            </a>
          </li>
          <li>
            <a href="/about" class="py-1 hover:text-orange-500 transition-colors duration-300 relative group">
              about
              <span class="absolute left-0 bottom-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full"></span>
            </a>
          </li>
          <li>
            <button id="theme-toggle" class="border-2 border-black p-1.5 rounded-none hover:border-orange-500 transition-colors duration-300 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
                <path stroke-linecap="square" stroke-linejoin="miter" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
              </svg>
            </button>
          </li>
        </ul>
      </nav>
    </div>
  </header>
  
  <script>
    // Theme toggle functionality
    const themeToggle = document.getElementById('theme-toggle');
    const html = document.documentElement;
    
    const updateThemeIcon = (isDark) => {
      if (!themeToggle) return;
      
      if (isDark) {
        themeToggle.innerHTML = `
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="square" stroke-linejoin="miter" d="M21.752 15.002A9.718 9.718 0 0118 15.75c-5.385 0-9.75-4.365-9.75-9.75 0-1.33.266-2.597.748-3.752A9.753 9.753 0 003 11.25C3 16.635 7.365 21 12.75 21a9.753 9.753 0 009.002-5.998z" />
          </svg>`;
      } else {
        themeToggle.innerHTML = `
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="square" stroke-linejoin="miter" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
          </svg>`;
      }
    };
    
    themeToggle?.addEventListener('click', () => {
      html.classList.toggle('dark');
      const isDark = html.classList.contains('dark');
      localStorage.setItem('theme', isDark ? 'dark' : 'light');
      updateThemeIcon(isDark);
    });
    
    // Check for saved theme preference or system preference
    const isDark = localStorage.getItem('theme') === 'dark' || 
                  (!localStorage.getItem('theme') && window.matchMedia('(prefers-color-scheme: dark)').matches);
    
    if (isDark) {
      html.classList.add('dark');
    }
    
    // Update icon on initial load
    updateThemeIcon(isDark);
  </script>