---
// components/widgets/ProjectWidget.astro
// A dedicated component for consistent project display with proper dark/light mode

import RetroImage from '../RetroImage.astro';

interface Project {
  title: string;
  description: string;
  link: string;
  tags: string[];
  image?: string;
}

interface Props {
  projects: Project[];
}

const { projects } = Astro.props;
---

<div class="space-y-6">
  {projects.map(project => (
    <div class="projects-item border-2 border-black dark:border-white p-4 hover:border-orange-500 transition-colors duration-300">
      {project.image && (
        <div class="mb-3">
          <RetroImage 
            src={project.image} 
            alt={project.title}
          />
        </div>
      )}
      <h3 class="text-lg font-bold font-mono mb-2">
        <a href={project.link} class="hover:text-orange-500 transition-colors duration-300">
          {project.title}
        </a>
      </h3>
      <p class="text-sm mb-3">{project.description}</p>
      <div class="flex flex-wrap gap-2">
        {project.tags.map(tag => (
          <span class="inline-block px-2 py-0.5 text-xs font-mono bg-black text-white dark:bg-white dark:text-black border border-black dark:border-white">
            {tag}
          </span>
        ))}
      </div>
    </div>
  ))}
</div>

<div class="mt-4">
  <a href="/projects" class="inline-flex items-center font-mono border-2 border-black dark:border-white px-4 py-2 hover:bg-orange-500 hover:text-white hover:border-orange-500 transition-colors duration-300 w-full justify-center">
    View all projects
    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 ml-2" viewBox="0 0 20 20" fill="currentColor">
      <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
    </svg>
  </a>
</div>