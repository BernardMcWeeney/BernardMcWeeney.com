---
// index.astro
import Layout from '../layouts/Layout.astro';

// Fake blog posts data (in a real site you'd fetch this from a CMS or file system)
const posts = [
  {
    title: "Building with Astro 5.5 and Tailwind CSS v4",
    slug: "building-with-astro-and-tailwind",
    date: "2025-03-15",
    excerpt: "A look at the new features and improvements in the latest versions of Astro and Tailwind CSS.",
    tags: ["astro", "tailwind", "webdev"]
  },
  {
    title: "The Return of Retro Design in Modern Web Development",
    slug: "retro-design-in-modern-web",
    date: "2025-03-01",
    excerpt: "Exploring the resurgence of retro aesthetics in contemporary web design and how to implement them.",
    tags: ["design", "css", "trends"]
  },
  {
    title: "Terminal-Inspired UI Components with Tailwind CSS",
    slug: "terminal-ui-components",
    date: "2025-02-20",
    excerpt: "Creating command-line inspired interface elements for your web projects using Tailwind CSS.",
    tags: ["ui", "tailwind", "design"]
  }
];

// Featured projects
const projects = [
  {
    title: "RetroTerm",
    description: "A terminal-inspired UI component library for modern web applications.",
    link: "/projects/retroterm",
    tags: ["React", "TypeScript", "UI"]
  },
  {
    title: "AstroMark",
    description: "A markdown-based blogging template for Astro with syntax highlighting.",
    link: "/projects/astromark",
    tags: ["Astro", "Markdown", "Blog"]
  }
];
---

<Layout title="DevRetro - A Modern Retro Developer Blog">
  <section class="hero mb-16">
    <div class="terminal-box p-8 sm:p-10">
      <h1 class="text-4xl sm:text-5xl font-mono font-bold mb-6">
        <span class="text-orange-500">&gt;</span> Bernard_McWeeney/
        <span class="cursor-blink"></span>
      </h1>
      <p class="text-lg max-w-2xl">
        A modern retro tech blog exploring web development, clean code, and the art of digital craftsmanship. Straight lines, hard edges, and a touch of nostalgia.
      </p>
    </div>
  </section>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <section class="md:col-span-2">
      <div class="flex items-center mb-8">
        <h2 class="text-2xl font-mono font-bold">Recent Posts</h2>
        <div class="h-0.5 bg-black dark:bg-white flex-grow ml-4"></div>
      </div>
      
      <div class="space-y-8">
        {posts.map(post => (
          <article class="border-2 border-black p-6 hover:border-orange-500 transition-colors duration-300 card-shadow">
            <time class="text-sm font-mono text-gray-600 dark:text-gray-400">{post.date}</time>
            <h3 class="text-xl font-bold font-mono mt-1 mb-2">
              <a href={`/blog/${post.slug}`} class="hover:text-orange-500 transition-colors duration-300">
                {post.title}
              </a>
            </h3>
            <p class="mb-4">{post.excerpt}</p>
            <div class="flex flex-wrap gap-2">
              {post.tags.map(tag => (
                <span class="inline-block px-2 py-0.5 text-xs font-mono bg-black text-white dark:bg-white dark:text-black border border-black">
                  #{tag}
                </span>
              ))}
            </div>
          </article>
        ))}
      </div>
      
      <div class="mt-8">
        <a href="/blog" class="inline-flex items-center font-mono border-2 border-black px-4 py-2 hover:bg-orange-500 hover:text-white hover:border-orange-500 transition-colors duration-300">
          View all posts
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </section>
    
    <aside>
      <div class="sticky top-8">
        <div class="flex items-center mb-8">
          <h2 class="text-2xl font-mono font-bold">Projects</h2>
          <div class="h-0.5 bg-black dark:bg-white flex-grow ml-4"></div>
        </div>
        
        <div class="space-y-6">
          {projects.map(project => (
            <div class="border-2 border-black p-4 hover:border-orange-500 transition-colors duration-300">
              <h3 class="text-lg font-bold font-mono mb-2">
                <a href={project.link} class="hover:text-orange-500 transition-colors duration-300">
                  {project.title}
                </a>
              </h3>
              <p class="text-sm mb-3">{project.description}</p>
              <div class="flex flex-wrap gap-2">
                {project.tags.map(tag => (
                  <span class="inline-block px-2 py-0.5 text-xs font-mono border border-black dark:border-white">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          ))}
        </div>
        
        <div class="mt-8">
          <a href="/projects" class="inline-flex items-center font-mono border-2 border-black px-4 py-2 hover:bg-orange-500 hover:text-white hover:border-orange-500 transition-colors duration-300">
            View all projects
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 ml-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
        
        <div class="mt-12 border-2 border-black">
          <div class="p-4 border-b-2 border-black bg-black text-white dark:bg-white dark:text-black">
            <h3 class="text-lg font-mono font-bold flex items-center">
              <span class="text-orange-500 mr-2">&gt;</span> Newsletter
            </h3>
          </div>
          <div class="p-4">
            <p class="text-sm mb-4">Get notified when I publish new articles and projects.</p>
            <form class="space-y-3">
              <input 
                type="email" 
                placeholder="your@email.com" 
                class="w-full px-3 py-2 border-2 border-black font-mono bg-transparent focus:outline-none focus:border-orange-500 transition-colors duration-300"
                required
              />
              <button 
                type="submit" 
                class="w-full bg-black text-white dark:bg-white dark:text-black font-mono py-2 hover:bg-orange-500 hover:border-orange-500 hover:text-white transition-colors duration-300 border-2 border-black"
              >
                Subscribe
              </button>
            </form>
          </div>
        </div>
      </div>
    </aside>
  </div>
</Layout>

<style>
  @keyframes blink {
    0%, 100% { opacity: 0; }
    50% { opacity: 1; }
  }
  
  .cursor-blink {
    animation: blink 1s step-end infinite;
  }
  
  .terminal-box {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .terminal-box:hover {
    transform: translate(-2px, -2px);
  }
  
  .terminal-box:hover::before {
    transform: translate(2px, 2px);
  }